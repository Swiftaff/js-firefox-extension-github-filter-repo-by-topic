{
  "manifest_version": 2,
  "name": "github-filter-repo-by-topic",
  "version": "1.0",
  "description": "Adds a Topic Filter button to your github repository page to help you quickly find your related Github repositories grouped by Topic!",
  "icons": {
    "48": "icons/github-filter-repo-by-topic-48.png",
    "96": "icons/github-filter-repo-by-topic-96.png"
  },
  "web_accessible_resources": [
    "icons/github-filter-repo-by-topic-96.png"
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/github-filter-repo-by-topic-32.png",
    "default_title": "Github filter repo by Topic"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*?tab=repositories*",
        "*://*.github.com/*?after=*&tab=repositories*",
        "*://*.github.com/*?before=*&tab=repositories*"
      ],
      "css": [
        "css.css"
      ],
      "js": [
        "index.js"
      ]
    }
  ]
}